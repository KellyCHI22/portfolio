---
import { Icon } from 'astro-icon';

type Tech = {
  name: string;
  icon: string;
};

const technologies: Tech[] = [
  {
    name: 'JavaScript',
    icon: 'simple-icons:javascript',
  },
  {
    name: 'TypeScript',
    icon: 'cib:typescript',
  },
  {
    name: 'React',
    icon: 'akar-icons:react-fill',
  },
  {
    name: 'Redux',
    icon: 'akar-icons:redux-fill',
  },
  {
    name: 'SASS',
    icon: 'akar-icons:sass-fill',
  },
  {
    name: 'Bootstrap',
    icon: 'akar-icons:bootstrap-fill',
  },
  {
    name: 'Styled Components',
    icon: 'simple-icons:styledcomponents',
  },
  {
    name: 'Tailwind CSS',
    icon: 'mdi:tailwind',
  },
  {
    name: 'Git',
    icon: 'bi:git',
  },
];
---

<section class="pt-12">
  <h3
    class="mx-auto mb-8 w-fit border-b-4 border-vermilion-500 font-righteous text-3xl dark:border-asparagus-500"
  >
    Tooling
  </h3>
  <div class="mx-5 grid grid-cols-3 gap-x-4 gap-y-6">
    {
      technologies.map((tech) => (
        <div class="flex flex-col items-center">
          <div class="w-fit rounded-full bg-white p-5 text-jet-500 dark:bg-pearl-bush-500 dark:text-pearl-bush-500">
            <Icon name={tech.icon} class="w-10 dark:text-jet-500" />
          </div>
          <p class="mt-2 text-center font-light leading-5">{tech.name}</p>
        </div>
      ))
    }
  </div>
</section>
