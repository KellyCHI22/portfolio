---
import '@fontsource/righteous';
import '@fontsource-variable/red-hat-display';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/public/logo-light.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="font-red-hat-display-variable bg-alabaster-500 border-8 border-vermilion-500 text-jet-500 dark:bg-jet-600 dark:text-alabaster-500"
  >
    <slot />
  </body>
</html>

<script is:inline>
  // change favicon according to default system theme
  const favicon = document.querySelector('link[rel="icon"]');
  const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark';
    }
    return 'light';
  })();

  if (theme === 'light') {
    document.documentElement.classList.remove('dark');
    favicon.setAttribute('href', `/public/logo-dark.svg`);
  } else {
    document.documentElement.classList.add('dark');
    favicon.setAttribute('href', `/public/logo-light.svg`);
  }
  window.localStorage.setItem('theme', theme);
</script>
